<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input name="titulo" value="{{note.titulo}}" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <textarea name="descripcion" type="text" class="form-control"> {{note.descripcion}} </textarea>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Guardar
                </button>
            </form>

        </div>
    </div>
</div>