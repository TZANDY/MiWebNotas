<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nueva Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input class="form-control text-center" type="text" name="title" placeholder="titulo" autofocus>
                </div>

                <div class="form-group">
                    <textarea class="form-control text-center" type="text" name="descripcion" placeholder="descripcion"
                        ></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>