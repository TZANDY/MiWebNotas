<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Register</h3>
            </div>
            
            <div class="card-body">
                <form action="/users/signup" method="POST">
                <div class="form-group">
                    <input type="text" name="nombre" id="" required class="form-control" placeholder="Nombre" value="{{nombre}}">
                </div>
                <div class="form-group">
                    <input type="text" name="apellido" id="" required class="form-control" placeholder="Apellido" value="{{apellido}}">
                </div>
                <div class="form-group">
                    <input type="email" name="email" id="" required class="form-control" placeholder="Email"  value="{{email}}">
                </div>
                
                <div class="form-group">
                    <input type="password" name="password" id="" required class="form-control" placeholder="Contraseña">
                </div>
                <div class="form-group">
                    <input type="password" name="confirmpassword" id="" required class="form-control" placeholder="Confirmar Contraseña">
                </div>
                <div class="form-check">
                    <input type="checkbox" required name="terminos_condiciones" id="terminoscondiciones" >
                    <label for="terminoscondiciones" class="form-check-label">Acepto los <a href="#">términos y condiciones</a></label>
                </div>
                <div class="form-check">
                    <input type="checkbox" required name="politicas_privacidad" id="politicasprivacidad" >
                    <label for="politicasprivacidad" class="form-check-label">Acepto las <a href="#">politicas de privacidad</a> </label>
                </div>
                <div class="form-check">
                    <input type="checkbox" name="promociones" id="promocionesemail" value="">
                    <label for="promocionesemail" class="form-check-label">Acepto recibir promociones via Email</label>
                </div>
                <button class="btn btn-primary btn-block btn_empezar" id="">
                    Empezar
                </button>
                
                </form>
            </div>
        </div>
    </div>
</div>